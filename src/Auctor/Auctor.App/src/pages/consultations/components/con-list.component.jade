.row
  .col-lg-2
    h1 con-list
hr
.row
  .col-lg-2
    button.form-control.btn-success
      a([routerLink]="['add']") add-con
br
.panel.panel.panel-default
  .panel-heading
    .row      
      .col-lg-3 date
      .col-lg-2 start-time
      .col-lg-2 end-time
      .col-lg-1 capacity
      .col-lg-1 room      
  .panel-body
    .row.g-row(*ngFor="let con of cons; let last = last; let first = first", 
              [ngClass]="{'last': last, 'first': first}")
      .col-lg-3 {{con?.date | date: 'dd-MM-yyyy'}}
      .col-lg-2 {{con?.startTime}}
      .col-lg-2 {{con?.endTime}}
      .col-lg-1 {{con?.capacity}}
      .col-lg-1 {{con?.roomName}}
      .col-lg-2
        button.form-control.btn-success
          a([routerLink]="['edit', con.id]") edit-con 
     
