.panel.panel.panel-default
  .panel-heading add-con
  .panel-body    
    .row
      .col-lg-2
        button.form-control.btn-success
          a(routerLink="/consulations/list") back-to-list
    hr
    .row
      .col-xs-12.col-lg-1
        label date
      .col-xs-12.col-lg-2
        ngx-datepicker([(ngModel)]="model.date")
      .col-xs-12.col-lg-1
        label start-time
      .col-xs-12.col-lg-2
        input(type="time", [(ngModel)]="model.startTime")
      .col-xs-12.col-lg-1
        label valid-till
      .col-xs-12.col-lg-2
        input(type="time", [(ngModel)]="model.endTime", [value]="model.endTime")
      .col-xs-12.col-lg-1
          label room
      .col-xs-12.col-lg-2
        v-select(                    
            [items]='rooms',
            [init-selected-item]="selectedRoom",
            [default-value]="roomsDefaultValue",
            [display-member]="'name'",
            [value-member]="'id'",
            (selected)="setRoom($event)")
    hr
    .row
      .col-lg-2
        button.form-control.btn-success((click)="save()")
          |save
      