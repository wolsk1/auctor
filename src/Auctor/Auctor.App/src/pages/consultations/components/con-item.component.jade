.panel.panel.panel-default
  .panel-heading {{formLabel}}
  .panel-body
    .row
      .col-lg-2
        button.form-control.btn-success
          a(routerLink="/cons") Atpakaļ uz sarakstu
    hr
    .row
      .col-xs-12.col-lg-1
        label Datums
      .col-xs-12.col-lg-2
        ngx-datepicker([(ngModel)]="model.date")
      .col-xs-12.col-lg-1
          label Kabinets
      .col-xs-12.col-lg-2
        v-select(
            [items]='rooms',
            [init-selected-item]="selectedRoom",
            [default-value]="roomsDefaultValue",
            [display-member]="'name'",
            [value-member]="'id'",
            [return-value-only]="!!false",
            (selected)="setRoom($event)")
      .col-xs-12.col-lg-1
        label Maks. dalībnieku skaits
      .col-xs-12.col-lg-2
        input.form-control(type="number", [(ngModel)]="model.capacity")
    hr
    .row
      .col-xs-12.col-lg-1
        label Sākuma laiks
      .col-xs-12.col-lg-2
        input.form-control(type="time", [(ngModel)]="model.startTime")
      .col-xs-12.col-lg-1
        label Beigu laiks
      .col-xs-12.col-lg-2
        input.form-control(type="time", [(ngModel)]="model.endTime")
    hr
    .row
      //- List of scholar courses, by default all are checked in
    hr
    .row
      .col-lg-2
        button.form-control.btn-success((click)="save()")
          |Saglabāt
